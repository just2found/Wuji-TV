<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/homeBgImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_home"/>
                <ImageView
                    android:id="@+id/homeBgImageUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_home"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.25"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_home_up"/>

    <!--<ImageView
        android:id="@+id/homeBgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_home"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:paddingLeft="65dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginTop="50dp"
                    android:lines="1"
                    android:maxEms="10"
                    android:textColor="#ffffff"
                    android:textSize="52sp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/homeLogoImage"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:paddingVertical="5dp"
                    android:scaleType="fitEnd"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="54dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="780dp"
                android:layout_height="wrap_content"
                android:paddingTop="0dp">
                <!--<TextView
                    android:id="@+id/tvDeviceTypeTitle"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.4"
                    android:text="@string/type"
                    android:textColor="#ffffff"
                    android:textSize="22sp"/>-->
                <TextView
                    android:id="@+id/tvDeviceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.4"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#c8ffffff"
                    android:textSize="23sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="780dp"
                android:layout_height="wrap_content"
                android:paddingTop="30dp">
                <!--<TextView
                    android:id="@+id/tvDevicePlotTitle"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/plot_home"
                    android:textColor="#88ffffff"
                    android:textSize="21sp"/>-->
                <TextView
                    android:id="@+id/tvDevicePlot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.4"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textColor="#88ffffff"
                    android:textSize="21sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="780dp"
                android:layout_height="wrap_content"
                android:paddingTop="6dp">
                <!--<TextView
                    android:id="@+id/tvDevicePriceTitle"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.4"
                    android:text="@string/flow_unit_price"
                    android:textColor="#88ffffff"
                    android:textSize="21sp"/>-->
                <TextView
                    android:id="@+id/tvDevicePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.4"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#88ffffff"
                    android:textSize="21sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:gravity="bottom">
                <LinearLayout android:visibility="gone"
                    android:layout_width="420dp"
                    android:layout_height="65dp"
                    android:background="#04416f"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDeviceTitle"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:drawableLeft="@mipmap/ic_home_sjx"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:textSize="26sp"
                android:paddingLeft="65dp"
                android:text="@string/shared_device"/>
            <TextView
                android:id="@+id/tvDeviceIndex"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#88ffffff"
                android:textSize="22sp"
                android:paddingLeft="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvError"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:visibility="gone" />
            <ScrollView
                android:id="@+id/scrollViewDevices"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="32dp"
                    android:paddingBottom="200dp">
                    <LinearLayout
                        android:id="@+id/layoutNetwork"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvNetworkTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:drawableLeft="@mipmap/ic_home_sjx"
                            android:gravity="center_vertical"
                            android:drawablePadding="10dp"
                            android:textSize="26sp"
                            android:paddingLeft="33dp"
                            android:text="@string/circle"/>
                        <TextView
                            android:id="@+id/tvNetworkIndex"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#88ffffff"
                            android:textSize="22sp"
                            android:paddingLeft="13dp"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvNetwork"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="242dp"
                        android:paddingVertical="15dp"
                        android:paddingLeft="15dp"/>
                    <LinearLayout
                        android:id="@+id/layoutShared"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvSharedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:drawableLeft="@mipmap/ic_home_sjx"
                            android:gravity="center_vertical"
                            android:drawablePadding="10dp"
                            android:textSize="26sp"
                            android:paddingLeft="33dp"
                            android:text="@string/shared_device"/>
                        <TextView
                            android:id="@+id/tvSharedIndex"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#88ffffff"
                            android:textSize="22sp"
                            android:paddingLeft="13dp"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSharedDevice"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="242dp"
                        android:paddingVertical="15dp"
                        android:paddingLeft="15dp"/>
                    <LinearLayout
                        android:id="@+id/layoutLocal"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvLocalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:drawableLeft="@mipmap/ic_home_sjx"
                            android:gravity="center_vertical"
                            android:drawablePadding="10dp"
                            android:textSize="26sp"
                            android:paddingLeft="33dp"
                            android:text="@string/local_device"/>
                        <TextView
                            android:id="@+id/tvLocalIndex"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#88ffffff"
                            android:textSize="22sp"
                            android:paddingLeft="13dp"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvLocalDevice"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="242dp"
                        android:paddingVertical="15dp"
                        android:paddingLeft="15dp"/>
                    <LinearLayout
                        android:id="@+id/layoutManager"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvManagerTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:drawableLeft="@mipmap/ic_home_sjx"
                            android:gravity="center_vertical"
                            android:drawablePadding="10dp"
                            android:textSize="26sp"
                            android:paddingLeft="33dp"
                            android:text="@string/download_manager"/>
                        <TextView
                            android:id="@+id/tvManagerIndex"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#88ffffff"
                            android:textSize="22sp"
                            android:paddingLeft="13dp"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvManager"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="252dp"
                        android:paddingVertical="15dp"
                        android:paddingLeft="15dp"/>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layoutProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/bg_progress"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/wuji"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="500dp"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/pb_home"
                android:indeterminateOnly="false"
                android:max="100"
                android:progress="0"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_marginTop="12dp"
            android:text="@string/resource_loading"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog"
        android:paddingHorizontal="80dp"
        android:paddingTop="60dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择网络"
            android:textColor="#ffffff"
            android:textSize="35sp"/>

        <com.wuji.tv.widget.ScaleRecyclerView
            android:id="@+id/rvProgressNetwork"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingVertical="40dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>